{
  "manifest_version": 3,
  "name": "Mon extension Fnac - Sandbox",
  "version": "1.0",
  "description": "Description de votre extension",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.fnac.com/*"],
      "js": ["content.js"]
    }
  ]
  
}
